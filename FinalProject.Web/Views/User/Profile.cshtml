@model FinalProject.Data.Entities.User
<div class=" card shadow p-4 mt-5 mx-auto w-75">
    <div class="d-flex justify-content-center">
        <img src="@Model.ProfileImageUrl" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px;" />
    </div>
    <h3 class="text-center mt-3">@Model.Name</h3>
    <p class="text-center">Email: @Model.Email</p>
    <p class="text-center">Dog Breed: @Model.DogBreed</p>
</div>