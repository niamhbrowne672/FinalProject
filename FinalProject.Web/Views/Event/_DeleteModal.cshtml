@model Event

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="delete modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteModal">Confirm Delete</h1>
      </div>

      <div class="modal-body">
        <p>Are you sure you want to delete @Model.Title?</p>
      </div>
      <div class="modal-footer">
        <form asp-action="DeleteConfirm" asp-route-id=@Model.Id>
          <button type="submit" class="btn btn-danger" aria-label="delete">
            Delete
          </button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
        </form>
      </div>
    </div>
  </div>
</div>