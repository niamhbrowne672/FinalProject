@model Event

<div class="card rounded shadow p-4">
  <!-- Title bar -->
  <div class="border-bottom d-flex align-items-center justify-content-between mb-3">
    <h3 class="text-primary">Delete Event</h3>
  </div>

  <h4 class="my-3 text-danger">Are you sure you want to delete this event?</h4>

  <!-- display the event using a <dl> as per Details.cshtml -->
  <dl class="row">
    <dt class="col-4 pb-1">Title</dt>
    <dd class="col-8 pb-1">@Model.Title</dd>

    <dt class="col-4 pb-1">Date & Time</dt>
    <dd class="col-8 pb-1">@Model.EventTime.ToString("MMM, dd, yyy - HH:mm")</dd>

    <dt class="col-4 pb-1">Description</dt>
    <dd class="col-8 pb-1">@Model.Description</dd>

    <dt class="col-4 pb-1">Location</dt>
    <dd class="col-8 pb-1">@Model.Location</dd>

    <dt class="col-4 pb-1">ImageUrl</dt>
    <dd class="col-8 pb-1">@Model.ImageUrl</dd>

    <dt class="col-4 pb-1">Created By</dt>
    <dd class="col-8 pb-1">Woof & Wander</dd>
  </dl>

  <div class="mt-4">
    <form asp-action="DeleteConfirm" asp-route-id="@Model.Id">
      <button type="submit" class="btn btn-danger" aria-label="delete">Delete</button>
      <a class="btn btn-secondary" asp-controller="Event" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
    </form>
  </div>
</div>