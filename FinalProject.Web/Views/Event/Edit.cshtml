@model Event

<div class="card shadow p-4 mt-5 mx-auto w-75">

    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-green p-2 lock-image">
        <svg class="text-white" width="28" height="28" viewBox="0 0 24 24" fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
                d="M12 15V17M6 21H18C19.1046 21 20 20.1046 20 19V13C20 11.8954 19.1046 11 18 11H6C4.89543 11 4 11.8954 4 13V19C4 20.1046 4.89543 21 6 21ZM16 11V7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7V11H16Z"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
    </div>

    <h3 class="my-3 mx-auto">Edit Event</h3>
    <form asp-action="Edit" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class=" mt-3">
            <label asp-for="EventTime" class="form-label">Date & Time</label>
            <input asp-for="EventTime" type="datetime-local" class="form-control"></input>
            <span asp-validation-for="EventTime" class="text-danger"></span>
        </div>

        <div class=" mt-3">
            <label asp-for="EndTime" class="form-label">End Time</label>
            <input asp-for="EndTime" type="datetime-local" class="form-control"></input>
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class=" mt-3">
            <label asp-for="Location" class="form-label">Location</label>
            <input asp-for="Location" class="form-control"></input>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class=" mt-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mt-3">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    <img src="@Model.ImageUrl" alt="Event Image" style="max-width:  100%; height: auto; display: block;" />
                </div>
            }
            <label asp-for="ImageUrl" class="form-label">Upload New Image</label>
            <input asp-for="ImageUrl" type="file" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class=" mt-3">
            <input type="submit" value="Create" class="btn btn-green" />

            <a class="btn btn-link ms-3" asp-controller="Event" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
