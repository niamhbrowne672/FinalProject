@model Paged<Post>

<h3 class="mb-3">Post List</h3>

<a class="btn btn-primary" asp-controller="Post" asp-action="Create">Create</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id
                <vc:sort-link column="id" />
            </th>
            <th>
                Title
                <vc:sort-link column="title" />
            </th>
            <th>
                User
                <vc:sort-link column="user.name" />
            </th>
        </tr>

        </tr>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Data)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Title</td>
                <td>@p.User.Name</td>
            </tr>
        }
    </tbody>
</table>

<vc:paginator pages="@Model.Pages" />