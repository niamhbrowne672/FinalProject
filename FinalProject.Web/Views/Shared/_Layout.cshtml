<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Woof & Wander</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProject.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.css"
        integrity="sha256-jLWPhwkAHq1rpueZOKALBno3eKP3m4IMB131kGhAlRQ=" crossorigin="anonymous">
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <partial name="_NavBar" />
        @RenderSection("Header", required: false)
    </header>

    <div class="container flex-grow-1">

        <!-- AMC Any alert defined in controller is rendered here -->
        <partial name="_Alert" />

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button id="back-to-top" title="Back To Top">
        <i class="bi bi-arrow-up-square"></i>
    </button>

    <footer>
        <!-- Footer Main Container -->
        <div class="footer-container">
            <!-- Left Links Section -->
            <div class="footer-section">
                <div class="footer-column">
                    <h3>Company</h3>
                    <a asp-controller="Home" asp-action="About">About Us</a>
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <a asp-controller="Contact" asp-action="Contact">Contact Us</a>
                </div>
                <div class="footer-column">
                    <h3>Services</h3>
                    <a asp-controller="Home" asp-action="Index">Home Page</a>
                    <a asp-controller="User" asp-action="Login">Login</a>
                    <a asp-controller="User" asp-action="Register">Register</a>
                </div>
            </div>

            <!-- Center Section -->
            <div class="footer-left">
                <div class="footer-logo">
                    <img src="~/images/logo/whitelogo.svg" alt="Logo">
                    <p>Connecting Dog Lovers for Meet-Ups & Fun!</p>
                </div>

                <div class="social-media-links">
                    <a href="https://en-gb.facebook.com/" target="_blank" aria-label="Facebook">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="https://www.tiktok.com/explore" target="_blank" aria-label="TikTok">
                        <i class="bi bi-tiktok"></i>
                    </a>
                    <a href="https://www.instagram.com/" target="_blank" aria-label="Instagram">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="https://x.com/__x?mx=2" target="_blank" aria-label="Twitter">
                        <i class="bi bi-twitter"></i>
                    </a>
                </div>
            </div>

            <!-- Right Links Section -->
            <div class="footer-section">
                <div class="footer-column">
                    <h3>Recommendations</h3>
                    <a asp-controller="Home" asp-action="Breed">Dog Breeds</a>
                    <a asp-controller="Home" asp-action="Locations">Locations</a>
                    <a asp-controller="Home" asp-action="Products">Products</a>
                </div>
                <div class="footer-column">
                    <h3>Events</h3>
                    <a asp-controller="Event" asp-action="Index">Our Events</a>
                    <a asp-controller="Gallery" asp-action="Past">Gallery</a>
                    <a asp-controller="Calendar" asp-action="County">Calendar</a>
                </div>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="container">
            &copy; @DateTime.Now.Year - Woof & Wander
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Full Calendar -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js"
        integrity="sha256-XCdgoNaBjzkUaEJiauEq+85q/xi/2D4NcB3ZHwAapoM=" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
